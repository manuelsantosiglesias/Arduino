<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.        -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="TextoNegrita" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textoNegrita</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="Texto" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/texto</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

</resources>
